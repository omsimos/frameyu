generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

generator pothos {
    provider = "prisma-pothos-types"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id       String    @id @default(cuid())
    username String    @unique
    googleId String    @unique
    image    String?
    email    String
    sessions Session[]
    frames   Frame[]
}

model Session {
    id        String   @id @default(cuid())
    userId    String
    expiresAt DateTime
    user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Frame {
    id      String  @id
    imgUrl  String
    handle  String? @unique
    caption String?
    userId  String
    user    User    @relation(references: [id], fields: [userId], onDelete: Cascade)
}
